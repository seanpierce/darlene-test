@model Albums

<h4>Insert Album InFo Here...  </h4>

@using (Html.BeginForm("InsertAlbumToDatabase", "Albums", FormMethod.Post))
{
    <input asp-for="AlbumID" type="hidden" value="" />

    <label asp-for="AlbumName" class="control-label">AlbumName</label>
    <input type="text" name="AlbumName" class="form-control" value="" />

    <label asp-for="ReleaseYear" class="control-label">ReleaseYear</label>
    <input type="text" name="ReleaseYear" class="form-control" value="" />

    <label asp-for="Artist" class="control-label">Artist</label>
    <input type="text" name="Artist" class="form-control" value=""/>

    <label asp-for="Price" class="control-label">Price</label>
    <input type="number" step="0.01" name="Price" class="form-control" />

    <input type="submit" value="Create New Album" class="btn btn-primary" />
}
